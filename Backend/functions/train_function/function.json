{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "name": "mytimer",
      "type": "timerTrigger",
      "direction": "in",
      "schedule": "0 */1 * * * *"
    },
    {
      "name": "modelOutput",
      "type": "blob",
      "direction": "out",
      "path": "models/{wine_type}/model.pkl",
      "connection": "AzureWebJobsStorage"
    },
    {
      "name": "scalerOutput",
      "type": "blob",
      "direction": "out",
      "path": "models/{wine_type}/scaler.pkl",
      "connection": "AzureWebJobsStorage"
    },
    {
      "name": "cleanedOutput",
      "type": "blob",
      "direction": "out",
      "path": "cleaned/{wine_type}/data.csv",
      "connection": "AzureWebJobsStorage"
    }
  ]
}

